@model IEnumerable<MudanzasGuaymasWeb.SrvServicio.Servicio>

@{
    ViewBag.Title = "Index";
}
<section>
    <div id="wrapperBanner">
        <div class="background">
            <div class="banner">
                <img src="https://s3.amazonaws.com/files.bannersnack.net/banners/bxtkyhkkg/images/jpg" />
            </div>
        </div>
        <div class="raya"></div>
        <div class="slogan">
            <h2>Servicios</h2>
            <P>Ingrese su informacion!!</P>
            <img src="~/Content/edge-candy.svg" />
        </div>
    </div>
</section>
<div id="wrapperTable">
    <h2>Servicios Administración</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th colspan="2">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Mostrar)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in ViewBag.servicio)
        {
            <tr>
                <td >
                   <img src=" @item.Imagen"/> 
                </td>
                <td>
                    @item.Nombre
                </td>
                <td>
                    @item.Mostrar
                </td>
                <td>
                    @item.Descripcion
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>